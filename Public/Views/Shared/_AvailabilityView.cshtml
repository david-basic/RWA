@model DataLayer.Models.ApartmentStatus
@{
    string cssClass = "availabilty_container_available";
    string statusText = "Available";

    if (Model.Id != 3)
    {
        cssClass = "availability_container_unavailable";
        statusText = "Unavailable";
    }

    ViewBag.css = cssClass;
    ViewBag.statusText = statusText;
}

<div class="rounded-3 @ViewBag.css" style="width:fit-content; height:fit-content; display:flex; align-items:center; justify-content:center">
    <div class="p-2">
        <span>@ViewBag.statusText</span>
    </div>
</div>
