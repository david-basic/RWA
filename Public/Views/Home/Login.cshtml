@model Public.Models.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
}

<div class="container col-sm-6 offset-sm-3" style="font-family:'Century Gothic'">
    <hr style="width: 10px" />
    @using (Html.BeginForm("Login", "Home", null, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="card" style="background: #12477360">

            <div class="container pt-3" style="display:flex; justify-content:center; align-items:center">
                <img src="~/Content/images/IKONA_apartmani_1_veći_white.png" style="width:150px; height:150px" />
            </div>

            <h2 class="text-center display-2" style="color:#124773"><strong>Login</strong></h2>
            <br />

            <div class="row mb-3">
                <div class="col-sm-8 offset-sm-2">
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", style = "text-align:center", placeholder = "E-mail address", id = "emailInput" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-8 offset-sm-2">
                    @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", style = "text-align:center", placeholder = "Password", id = "passwordInput" })
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @*<img src="~/Content/images/warning.png" aria-hidden="true" />*@
                    @Html.ValidationSummary()
                </div>
            }

            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-outline-light" style="background: #124773"><strong>Login</strong></button>
            </div>

            <div class="mb-3 text-center text-decoration-underline">
                @Html.ActionLink("Don't have an account? Register here", actionName: "Register", controllerName: "Home")
            </div>
        </div>
    }
</div>